@model BALOTA.ViBaoHiem.Entity.MemberEntity
    
    
<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Sửa thông tin đại lý</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

</div>
@using (Ajax.BeginForm("MemberList_UpdateAgency", "MemberList"
    , null
    , new AjaxOptions
        {
            HttpMethod = "post"            
            , OnFailure = "OnCallUpdateAgencyFailure"
            , OnSuccess = "OnCallUpdateAgencySuccess"
        }
    , new { role = "form", id = "CreateAgencyForm" }))
{
<div class="modal-body">
    <div class="row hidden">
        <div class="col-12">            
            <div class="form-group">                
                @Html.HiddenFor(m => m.MemberId)
            </div>
        </div>        
    </div>
    <div class="row">
        <div class="col-6">
            <!-- text input -->
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "Username", disabled = "disabled" })
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                @Html.LabelFor(m => m.FullName, "Tên đầy đủ")
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", id = "FullName" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <!-- text input -->
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email" })
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Mobile);
                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", id = "Mobile" })
            </div>
        </div>

    </div>
    <div class="alert alert-danger d-none text-center" role="alert" id="UpdateAgencyAlert">

    </div>

</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <button class="btn btn-primary" id="submit" type="submit">Tạo</button>
    </div>
}

